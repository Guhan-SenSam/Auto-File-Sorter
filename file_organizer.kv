<Organize>:
    radius:20,20,20,20
    size_hint:.2,.45
    pos_hint:{'center_x':.5, "center_y":.5}
    elevation:12
    md_bg_color:1,1,1,1
    RelativeLayout:
        MDIconButton:
            id:organize
            user_font_size:'90sp'
            pos_hint:{'center_x':.5, 'center_y':.5}
            icon:'sort'

        Label:
            id:label
            text:"Sort"
            color:0,0,0,1
            pos_hint:{'center_x':.5, 'center_y':.15}
            font_name:'Roboto-Bold'
            font_size:'15sp'

